{
  "name": "youtube-dl-gui",
  "version": "2.6.18",
  "description": "Open Video Downloader Plus",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev --ozone-platform-hint=auto",
    "build": "electron-builder",
    "lint": "eslint {**/modules/**/*.js,*.js} && eslint renderer/*.js",
    "test": "jest --coverage",
    "quick-test": "jest && eslint {**/modules/**/*.js,/*.js} && eslint renderer/*.js"
  },
  "jest": {
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "collectCoverageFrom": [
      "**/modules/**/*.js"
    ]
  },
  "keywords": [
    "youtube-dl",
    "electron",
    "download",
    "youtube",
    "gui",
    "interface"
  ],
  "author": "Jelle Glebbeek <john@doe.com>, Julien Valentin <mp3butcher@hotmail.com>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^25.1.7",
    "eslint": "^7.32.0",
    "jest": "^27.3.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "adm-zip": "^0.5.10",
    "amqplib": "^0.10.4",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.3.0",
    "bootstrap5-toggle": "^5.1.2",
    "bottleneck": "^2.19.5",
    "ctrlc-windows": "^2.2.0",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.4",
    "execa": "^5.1.1",
    "iso-639-2": "^2.0.0",
    "jquery": "^3.7.1",
    "mkdirp": "^2.1.6",
    "pyodide": "^0.25.1",
    "sortablejs": "^1.15.0",
    "targz": "^1.0.1",
    "user-agents": "^1.0.1444",
    "windowbar": "^1.7.4"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mp3butcher/youtube-dl-gui.git"
  },
  "build": {
    "extraResources": [
      "binaries/send_traffic_to_videodownloader.py",
      {
        "from": "./resources/",
        "to": "./resources/",
        "filter": [
          "**/*"
        ]
      },{
        "from": "./node_modules/pyodide",
        "to": "./resources/pyodide",
        "filter": [
          "**/*"
        ]
      }
    ],
    "afterPack": "./build/appimage-fix.js",
    "appId": "com.mp3butcher.youtube-dl-gui-plus",
    "asarUnpack": "**/binaries/*",
    "appx": {
      "backgroundColor": "#292929",
      "displayName": "Open Video Downloader Plus",
      "identityName": "3216MpEbUtCh3r.youtube-dl-gui-plus",
      "publisher": "CN=EBDD6AA4-D72E-42C6-BBCB-A288476F0CBE",
      "publisherDisplayName": "MpEbUtCh3r",
      "applicationId": "openvideodownloader"
    },
    "nsis": {
      "include": "./build/vcredist.nsh",
      "packElevateHelper": false
    },
    "productName": "Open Video Downloader Plus",
    "copyright": "Copyright Â© 2020-2021 Jelle Glebbeek 2023-2025 Julien Valentin",
    "win": {
      "target": "nsis",
      "icon": "renderer/img/icon.ico",
      "files": [
        "!**/renderer/img/icon.icns",
        "!README.md",
        "!.github${/*}",
        "!ytdlgui_demo.gif",
        "!appimage-fix.js",
        "!userSettings",
        "!coverage",
        "!tests",
        "!codecov.yaml",
        "!**/.eslintrc.js"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "renderer/img/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "files": [
        "!**/binaries/AtomicParsley.exe",
        "!**/renderer/img/icon.ico",
        "!README.md",
        "!.github${/*}",
        "!ytdlgui_demo.gif",
        "!appimage-fix.js",
        "!userSettings",
        "!coverage",
        "!tests",
        "!codecov.yaml",
        "!**/.eslintrc.js"
      ]
    },
    "linux": {
      "target": "AppImage",
      "executableName": "open-video-downloader",
      "icon": "renderer/img/icon.png",
      "synopsis": "A cross-platform GUI for youtube-dl",
      "category": "X-utility",
      "desktop": {
        "Name": "Open-Video-Downloader",
        "Icon": "youtube-dl-gui",
        "Comment": "A cross-platform GUI for youtube-dl"
      },
      "files": [
        "!**/binaries/AtomicParsley.exe",
        "!**/renderer/img/icon.icns",
        "!**/renderer/img/icon.ico",
        "!README.md",
        "!.github${/*}",
        "!ytdlgui_demo.gif",
        "!appimage-fix.js",
        "!userSettings",
        "!coverage",
        "!tests",
        "!codecov.yaml",
        "!**/.eslintrc.js"
      ]
    }
  }
}
